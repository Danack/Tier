<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="phpunit_bootstrap.php">
    <php>
    </php>

    <testsuites>
        <testsuite name="Jig Test Suite">
            <directory>../test/</directory>
            <exclude>BaseTestCase.php</exclude> <!-- This doens't seem to work-->
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src/Jig</directory>
            <directory>../tmp/generatedTemplates/Jig</directory>
        </whitelist>
    </filter>

    <listeners>
        <listener class="\Mockery\Adapter\Phpunit\TestListener"/>
    </listeners>

    <logging>
        <!-- <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/> -->
        <log type="coverage-html" target="../tmp/coverage" charset="UTF-8"
             highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging> 
    
</phpunit>
